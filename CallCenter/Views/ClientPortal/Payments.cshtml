@model IEnumerable<CallCenter.Models.PaymentsModels>

<hr />

<div style="overflow-y: scroll; overflow-x: hidden; height: 400px;">
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientReference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentDate)
            </th>
            <th>
                Action
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="filterable-cell">
                    @Html.DisplayFor(modelItem => item.AccountNumber)
                </td>
                <td class="filterable-cell">
                    @Html.DisplayFor(modelItem => item.ClientID)
                </td>
                <td class="filterable-cell">
                    @Html.DisplayFor(modelItem => item.ClientReference)
                </td>
                <td class="filterable-cell">
                    @Html.DisplayFor(modelItem => item.Invoice)
                </td>
                <td class="filterable-cell">
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td class="filterable-cell">
                    @Html.DisplayFor(modelItem => item.PaymentDate)
                </td>
                <td>
                    @if (item.Approve)
                    {
                        <a>Approved!</a>
                    }
                    else
                    {
                        @Html.ActionLink("Approve", "ApprovePayment", new { id = item.Id })
                    }
                </td>
            </tr>
        }
    </table>
</div>
