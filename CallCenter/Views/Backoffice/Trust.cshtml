
@{
    ViewBag.Title = "Trust";
}

<hr/>
<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-6 text-left">
            <p>
                EXPECTED FORMAT:
                <br />
                File format needs to be <b>csv</b>.
                <br />
                Column order does not matter and column names are case insensitive for all columns.
                <br />
                The following columns are <b>required</b>:
                <br />
                <code>acc_number, inv_number, amount</code>
            </p>

            @using (Html.BeginForm("Trust", "Backoffice", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <span>Select File:</span>
                <input type="file" name="postedFile" />
                <hr />
                <input type="submit" value="Upload" />
                <br />
                <span style="color:green">@ViewBag.Message</span>
            }
        </div>
        <div class="col-sm-6 text-left">
            <b>Batch Result:</b>
            <br />
            <div class="well">
                <p>
                    @ViewBag.Message2 Invoices processed
                    <br />
                    -------------------------
                    <br />
                    @ViewBag.Message3 Total payment amount
                </p>
            </div>
        </div>
    </div>
</div>
